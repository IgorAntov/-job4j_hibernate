<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="memory" class="ru.job4jhibernate.spring.storage.MemoryStorage">
    </bean>

    <bean id="jdbc" class="ru.job4jhibernate.spring.storage.JDBCStorage">
    </bean>

    <bean id="memoryStorage" class="ru.job4jhibernate.spring.InputUserToMemory">
        <constructor-arg name="storage" ref="memory">
        </constructor-arg>
    </bean>

    <bean id="jdbcStorage" class="ru.job4jhibernate.spring.InputUserToDb">
        <constructor-arg name="storage" ref="jdbc">
        </constructor-arg>
    </bean>

</beans>