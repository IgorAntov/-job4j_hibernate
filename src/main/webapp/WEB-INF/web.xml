<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <servlet>
        <servlet-name>ListControl</servlet-name>
        <servlet-class>ru.job4jhibernate.todolist.servlets.ListControl</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListControl</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CarsList</servlet-name>
        <servlet-class>ru.job4jhibernate.admanager.servlets.CarList</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarsList</servlet-name>
        <url-pattern>/carslist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>ru.job4jhibernate.admanager.servlets.SignIn</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>ru.job4jhibernate.admanager.servlets.AddUser</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddAds</servlet-name>
        <servlet-class>ru.job4jhibernate.admanager.servlets.AddAds</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAds</servlet-name>
        <url-pattern>/addads</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowAds</servlet-name>
        <servlet-class>ru.job4jhibernate.admanager.servlets.ShowAds</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowAds</servlet-name>
        <url-pattern>/showads</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DownloadImage</servlet-name>
        <servlet-class>ru.job4jhibernate.admanager.servlets.DownloadImage</servlet-class>
        <load-on-startup>6</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadImage</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignOut</servlet-name>
        <servlet-class>ru.job4jhibernate.admanager.servlets.SignOut</servlet-class>
        <load-on-startup>7</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignOut</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AbsUpdate</servlet-name>
        <servlet-class>ru.job4jhibernate.admanager.servlets.AdsUpdate</servlet-class>
        <load-on-startup>8</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AbsUpdate</servlet-name>
        <url-pattern>/adsupdate</url-pattern>
    </servlet-mapping>
</web-app>